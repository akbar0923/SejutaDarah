<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tambahkan tampilan yang sesuai untuk halaman Home -->

    <!-- Card Profile -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Foto Profil -->
            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_user"
                android:scaleType="centerCrop" />

            <!-- Nama -->

            <!-- Nomor Identitas -->
            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pengguna"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textIdentity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Identitas"
                android:textSize="14sp" />

            <!-- Golongan Darah -->
            <TextView
                android:id="@+id/textBloodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Golongan Darah"
                android:textSize="14sp" />

            <!-- Reward Poin -->
            <TextView
                android:id="@+id/textRewardPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reward Poin: 0"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
